<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main1_Acticity.M1_DengLu">

    <include layout="@layout/head1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/zhcs"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/zh" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:id="@+id/zhanghao"
                    android:text="gongjie"
                    android:hint="请  输  入  账  号" />
            </LinearLayout>

            <!--        <View-->
            <!--            android:layout_gravity="center"-->
            <!--            android:layout_width="300dp"-->
            <!--            android:layout_height="1dp"-->
            <!--            android:background="#111111"-->
            <!--            />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/mima" />

                <EditText
                    android:textSize="25dp"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:id="@+id/mima"
                    android:text="123456"
                    android:hint="请  输  入  密  码" />
            </LinearLayout>

            <!--        <View-->
            <!--            android:layout_gravity="center"-->
            <!--            android:layout_width="300dp"-->
            <!--            android:layout_height="1dp"-->
            <!--            android:background="#111111"-->
            <!--            />-->
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:background="@drawable/button_yuaniao"
        android:text="登录"
        android:id="@+id/DL"
        android:textColor="#EFEFEF"
        android:textSize="25dp" />

</LinearLayout>